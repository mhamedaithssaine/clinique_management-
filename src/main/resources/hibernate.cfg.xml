<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/clinique_db</property>
        <property name="hibernate.connection.username">postgres</property>
        <property name="hibernate.connection.password">Mhamed@1</property>

        <property name="hibernate.hbm2ddl.auto">update</property>
        <property name="hibernate.format_sql">true</property>
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.use_sql_comments">true</property>
        <mapping class="com.clinique.model.User"/>
        <mapping class="com.clinique.model.Patient"/>
        <mapping class="com.clinique.model.Doctor"/>
        <mapping class="com.clinique.model.Speciality"/>
        <mapping class="com.clinique.model.Department"/>
        <mapping class="com.clinique.model.Appointment"/>
        <mapping class="com.clinique.model.Availability"/>
        <mapping class="com.clinique.model.Staff"/>
    </session-factory>
</hibernate-configuration>